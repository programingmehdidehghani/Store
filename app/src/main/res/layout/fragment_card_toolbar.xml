<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/digikala_red"
        android:weightSum="1.0">


        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.button.MaterialButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="52dp"
                android:layout_height="60dp"
                android:insetTop="0dp"
                android:insetBottom="6dp"
                app:backgroundTint="@color/nothing"
                app:cornerRadius="30dp"
                app:icon="@drawable/ic_shopping_cart"
                app:iconPadding="0dp"
                app:iconSize="20dp" />

            <TextView
                android:id="@+id/card_toolbar_fragment__card_number"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/cart_counter"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/digikala_red"
                android:textSize="11dp"
                app:fontFamily="@font/far_trafc_bd" />


        </FrameLayout>

        <TextView
            android:id="@+id/card_toolbar_fragment__title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/far_roya_bd"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="@color/digikala_raw_white"
            app:layout_constraintEnd_toStartOf="@+id/card_toolbar_fragment__back_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_toolbar_fragment__back_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:insetTop="0dp"
            android:insetBottom="6dp"
            app:backgroundTint="#007B2CD6"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_back"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>