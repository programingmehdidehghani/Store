<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="categoryViewModel"
            type="com.mag.digikala.viewmodel.CategoryViewModel" />
    </data>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/layout_green_cat__item"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/digikala_green"
        android:fontFamily="@font/iran_yekan"
        android:gravity="center"
        android:text="@{categoryViewModel.categoryGroupTitle}"
        android:textColor="@color/digikala_raw_white"
        android:textSize="12dp"
        app:cornerRadius="16dp"
        app:rippleColor="@color/digikala_gray" />

</layout>