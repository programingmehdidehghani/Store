<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/digikala_red">


            <FrameLayout
                android:id="@+id/product_detail_toolbar_fragment__frame_btn"
                android:layout_width="52dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/product_detail_toolbar_fragment__menu_btn"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/product_detail_toolbar_fragment_card_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="52dp"
                    android:layout_height="60dp"
                    android:insetTop="0dp"
                    android:insetBottom="6dp"
                    app:backgroundTint="#007B2CD6"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_shopping_cart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp" />

                <TextView
                    android:id="@+id/product_detail_toolbar_fragment__card_number"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/cart_counter"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/digikala_red"
                    android:textSize="12dp"
                    app:fontFamily="@font/far_trafc_bd" />


            </FrameLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/product_detail_toolbar_fragment__menu_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="52dp"
                android:layout_height="60dp"
                android:insetTop="0dp"
                android:insetBottom="6dp"
                app:backgroundTint="#007B2CD6"
                app:cornerRadius="30dp"
                app:icon="@drawable/ic_menu"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toolbar_fragment__back_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="52dp"
                android:layout_height="60dp"
                android:insetTop="0dp"
                android:insetBottom="8dp"
                app:backgroundTint="#007B2CD6"
                app:cornerRadius="30dp"
                app:icon="@drawable/ic_back"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>
</layout>